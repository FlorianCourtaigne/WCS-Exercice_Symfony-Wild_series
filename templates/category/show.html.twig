{% extends 'base.html.twig' %}

{% block title %}Wild Series{% endblock %}

{% block body %}
<main class="">
    {% for program in programs %}
        <h2>{{loop.index}} / <a href="{{ path("program_show", { id: program.id }) }}">{{ program.title }}</a></h2>
    {% else %}
    Aucune série trouvée.
    {% endfor %}
<a href="{{ path('app_index') }}">
    Retour à l'accueil
</a>
</main>
{% endblock %}