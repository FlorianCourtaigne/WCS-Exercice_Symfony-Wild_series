{% extends 'base.html.twig' %}

{% block title %}Wild Series{% endblock %}

{% block body %}
<main class="vh-100">
    <h2>{{ program.title }} - Cat√©gorie : {{ program.category.name }}</h2>
    <p> {{program.country}} / {{program.year}} </p>
    <p>{{ program.synopsis }}</p>
    <p>{{ season.description}}</p>
    {% for episode in episodes %}
        {% if season.id == episode.season.id %}
            <p><a href="{{ path("program_episode_show", { programId: program.id, seasonId: season.id, episodeId : episode.id }) }}">{{ episode.title }}</a></p>
        {% endif %}
    {% endfor %}
</main>
{% endblock %}